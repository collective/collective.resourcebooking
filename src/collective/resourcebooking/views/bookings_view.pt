<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.resourcebooking"
      metal:use-macro="context/main_template/macros/master">
<body>
  <metal:content-core fill-slot="content-core">
  <metal:block define-macro="content-core">

  <h2>This week</h2>
  <ul>
    <li tal:repeat="item view/current_week_bookings"><a href="${item/url}">${item/resource} - ${python: plone_view.toLocalizedTime(item['day'], long_format=False)} / ${item/timeslot}</a></li>
  </ul>

  <!-- <h2>Next week</h2>
  <ul>
    <li tal:repeat="item view/next_week_bookings"><a href="${item/getURL}">${item/resource} - ${item/day} - ${item/timeslot}</a></li>
  </ul> -->
  </metal:block>
  </metal:content-core>
</body>
</html>
